@page "/"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Balance School</title>
    <style>
        /* Reset some default styles */
        body, h1, h2, p, ul, li {
            margin: 0;
            padding: 0;
        }

        /* Apply a basic style to the body */
        body {
            
            font-family: font-kerning;
            line-height: 1.5;
            background-color: #f4f4f4;
            color: black;
            margin: 10px;
        }

        /* Style the header */
        header {
            background-color: #004C8F;
            align-content:center;
            align-items:end;
            display:flex;
            color: #fff;
            padding: 0px;
            text-align: center;
        }


        /* Style the navigation menu */
        nav {
            background-color: #00315C;
            color: #fff;
            padding: 10px;
            text-align: center;
        }

            nav ul {
                list-style-type: none;
                align-content: center;
                align-items:flex-start;
                display: list-item;
                margin: 0;
                padding: 0;
            }

            nav li {
                display: inline;
                margin-right: 10px;
            }

            nav a {
                color: #fff;
                text-decoration: none;
                font-weight: bold;
            }

        /* Style the main content sections */
        section  {
            padding: 20px;
            align-items:flex-start;
            background-color: transparent;
            margin-top: 10px;
            border-radius: 5px;
        }

        /* Style the footer */
        footer {
            background-color: #00315C;
            position:relative;
            color: #fff;
            padding: 10px;
            text-align: center;
            position: fixed;
            bottom: 0;
            width: 92%;
        }

        footer {
            background-color: #00315C;
            color: #fff;
            padding: 20px 0;
            text-align: center;
        }

        .footer-content {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
        }

        .footer-section {
            width: 30%;
            margin-bottom: 20px;
        }

            .footer-section h2 {
                font-size: 1.5rem;
                margin-bottom: 10px;
            }

            .footer-section p {
                color: #ddd;
            }

        .newsletter-form {
            width: 100%;
            max-width: 400px;
            margin: 0 auto;
            display: flex;
            flex-direction: column;
        }

            .newsletter-form input {
                padding: 10px;
                margin-bottom: 10px;
                border: none;
                border-radius: 5px;
            }

            .newsletter-form button {
                padding: 10px;
                background-color: #007bff;
                color: #fff;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }

        .footer-bottom {
            margin-top: 20px;
        }
    </style>
</head>
<body>


